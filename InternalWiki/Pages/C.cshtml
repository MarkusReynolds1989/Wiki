//Change the DOM to implement a text box where we can make changed. 
//Changes are saved from a different button that appears that posts the data.
//Break this up when we move to typescript.
function Modify() {
   //Save previous data on the client side:
   let content = document.getElementById("content");
   let preContent = document.getElementById("content").innerHTML;
   let buttons = document.getElementById("buttons");
   content.innerHTML = `<textarea class="form-control"
                                          id="modifyContent"
                                          name="Article.Content"
                                          rows="10"
                                          cols="70"></textarea>`;
   document.getElementById("modifyContent").value += preContent; 
   buttons.innerHTML = `<button class="btn btn-primary"> Submit </button>
   <button class="btn btn-danger" onclick="Cancel()"> Cancel </button>`
}
</script>