@page
@model InternalWiki.NewModel
@{
    ViewData["Title"] = "New";
}

<div class="text-center">
    <h1>New Article</h1>
    <form method="post" class="form-group">
        <br/>  
        <label for="title">Title:</label>
        <input type="text" id="title" name="Article.Title" class="form-control"/>
        <label for="tags">Tags:</label>
        <input type="text" id="tags" name="Article.Tags" class="form-control"/>
        <label>Content</label>
        <textarea class="form-control" name="Article.Content"></textarea>
        <button type="submit" class="btn-primary">Submit</button>
    </form>
</div>



